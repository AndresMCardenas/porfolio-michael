---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";

import {getI18n} from "../i18n/index";

const { currentLocale } = Astro;
const i18n = getI18n({ currentLocale });

---

<Layout 
  title={i18n.basics.titel}
  description={i18n.basics.description}
>
  <main>
    <section class="w-full lg:w-[740px] mx-auto py-40 text-slate-700">
      <h1 class="text-5xl font-semibold flex flow-row gap-x-4 pb-6">
        {i18n.basics.name}
        <a
          href="https://www.youtube.com/@smithos2121"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center justify-center"
        >
          <Badge>{i18n.basics.badge}</Badge>
        </a>
        <img
          class="rounded-full size-40"
          src="https://yt3.googleusercontent.com/ytc/AIf8zZSgZfY1KXOeTa8mQgVZcWKRVfG2Qwm2PnB-vPA4=s176-c-k-c0x00ffffff-no-rj"
          alt="Foto de perfil de Michael Pineda"
        />
      </h1>
      <h2 class="text-xl opacity-80 text-wrap"><span>{i18n.basics.summary}</span></h2>
      <h2 class="text-xl opacity-80 text-pretty "><span>{i18n.basics.summary2}</span></h2>
      <h2 class="text-xl opacity-80 text-pretty font-semibold"><span>{i18n.basics.summary3}</span></h2>
    </section>
  </main>
</Layout>

